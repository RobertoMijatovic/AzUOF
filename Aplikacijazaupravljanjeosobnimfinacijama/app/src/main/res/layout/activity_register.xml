<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/nameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unesite ime" />

        <EditText
            android:id="@+id/registerEmailTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unesite email" />

        <EditText
            android:id="@+id/registerLozinkaTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unesite lozinku" />

        <EditText
            android:id="@+id/registerSbmtLozinkaTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Potvrdite lozinku" />

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registriraj se" />

        <Button
            android:id="@+id/googleRegisterBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register with Google" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>